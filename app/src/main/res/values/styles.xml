<resources>

    <!-- Light base application theme. -->
    <style name="AppTheme.Light.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="customPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme.Light.Base" />

    <!-- Dark base application theme. -->
    <style name="AppTheme.Dark.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="customPopupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme.Dark.Base" />

    <style name="AppTheme.Light.Base.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlHighlight">#20000000</item>
    </style>

    <style name="titleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
