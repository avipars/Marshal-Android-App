    <style name="AppTheme.CardView" parent="CardView.Light" />

    <style name="TextAppearance.Expanded.Toolbar.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#171819</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="Cycle.DialogAlert" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/error_color</item>
        <item name="android:windowTitleStyle">@style/Cycle.DialogAlert.Title</item>
    </style>

    <style name="Cycle.DialogAlert.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Rating.DialogAlert" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Course.RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/star_color</item>
        <item name="colorControlActivated">@color/star_color</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MarshalDetailDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextAppearance.MoocFlag" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:rotation">45</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">2</item>
    </style>

