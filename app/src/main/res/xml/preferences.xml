<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_general_category">
        <ListPreference
            android:defaultValue="iw"
            android:entries="@array/LanguageName"
            android:entryValues="@array/LanguageCode"
            android:key="language"
            android:title="@string/pref_language_title"
            android:summary="%s" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="night_mode"
            android:title="@string/pref_night_mode_title"
            android:summary="@string/pref_night_mode_summary" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_notifications_category">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="notifications_new_message"
            android:title="@string/pref_new_course_notifications_title"
            android:summary="@string/pref_new_course_notifications_summary" />

        <RingtonePreference
            android:defaultValue="content://settings/system/notification_sound"
            android:dependency="notifications_new_message"
            android:key="notifications_new_message_ringtone"
            android:ringtoneType="notification"
            android:title="@string/pref_ringtone_title" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:dependency="notifications_new_message"
            android:key="notifications_new_message_vibrate"
            android:title="@string/pref_vibrate_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_about_category">
        <PreferenceScreen
            android:title="@string/pref_version_title"
            android:key="version">
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>
