<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/malshab_card"
    style="@style/AppTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:rotationY="180">

        <com.basmapp.marshal.ui.widget.SquareImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/inline_image_placeholder"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_content_vertical_inset_mini"
            android:layout_marginEnd="@dimen/card_content_horizontal_inset_mini"
            android:layout_marginStart="@dimen/card_content_horizontal_inset_mini"
            android:layout_marginTop="@dimen/card_content_vertical_inset_mini"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="0sp"
            android:lines="2"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/small_title_size" />
    </LinearLayout>
</android.support.v7.widget.CardView>
