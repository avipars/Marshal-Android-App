<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_myCourses_search_mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_subscriptions_search_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/fragment_subscriptions_no_subscriptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="10.0dp"
        android:drawableTop="@android:drawable/ic_lock_lock"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:paddingLeft="16.0dp"
        android:paddingRight="16.0dp"
        android:text="@string/no_subscriptions"
        android:textColor="?android:textColorSecondary"
        android:textSize="18.0sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fragment_subscriptions_search_no_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</FrameLayout>
