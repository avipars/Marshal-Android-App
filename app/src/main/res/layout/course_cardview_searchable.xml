<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchable_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.CardView
        android:id="@+id/course_searchable_cardView"
        style="@style/AppTheme.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/course_searchable_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minWidth="280dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="@dimen/link_preview_thumb_width"
                    android:layout_height="@dimen/link_preview_thumb_height">

                    <ImageView
                        android:id="@+id/course_searchable_imageView"
                        android:layout_width="@dimen/link_preview_thumb_width"
                        android:layout_height="@dimen/link_preview_thumb_height"
                        android:background="@drawable/inline_image_placeholder"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:transitionName="@string/transition_header_image" />

                    <TextView
                        android:id="@+id/mooc_flag"
                        style="@style/TextAppearance.MoocFlag"
                        android:layout_width="80dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="-20dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/mooc_flag_background"
                        android:gravity="center"
                        android:text="@string/mooc_flag_title"
                        android:visibility="gone" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:paddingBottom="2dp"
                    android:paddingEnd="4dp"
                    android:paddingStart="16dp"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/course_searchable_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:lineSpacingMultiplier="1.08"
                        android:maxLines="1"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/course_searchable_subTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:paddingBottom="1dp"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/course_searchable_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start|center_vertical"
                            android:maxLines="1"
                            android:textColor="?android:textColorSecondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/course_searchable_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="start|center_vertical"
                            android:maxLines="1"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/course_searchable_ratingIcon"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginBottom="7dp"
                            android:layout_marginTop="7dp"
                            android:contentDescription="@null"
                            android:paddingEnd="-4dp"
                            android:tint="@color/star_color"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_course_rating_star" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
