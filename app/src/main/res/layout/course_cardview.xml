<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/course_cardview_widget"
        android:layout_width="@dimen/course_cardview_width"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:foreground="?attr/selectableItemBackground"
        style="@style/AppTheme.CardView">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course_cardview_startDateTime"
                    android:layout_width="@dimen/course_cardview_width"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:background="@color/colorPrimary"
                    android:gravity="start"
                    android:layout_gravity="top"
                    android:padding="2dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"/>

                <ImageView
                    android:id="@+id/course_cardview_image"
                    android:layout_width="@dimen/course_cardview_width"
                    android:layout_height="0dp"
                    android:layout_weight="1.25"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/course_cardview_name"
                    android:layout_width="@dimen/course_cardview_width"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="?android:textColorPrimary"
                    android:padding="5dp"
                    android:maxLines="3"
                    android:ellipsize="end" />

            </LinearLayout>

            <ImageView
                android:id="@+id/course_cardview_moocFlag"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mooc_flag"
                android:layout_gravity="end"
                android:visibility="gone"
                tools:ignore="ContentDescription"/>

        </FrameLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
