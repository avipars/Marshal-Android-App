<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.basmach.marshal.ui.fragments.CoursesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/fragment_courses_relativeLayout_viewPager"
            android:layout_height="200dp"
            android:layout_width="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/main_catalog_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true" />

            <com.basmach.marshal.ui.utils.InkPageIndicator
                android:id="@+id/main_catalog_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_courses_software_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <Button
                android:id="@+id/fragment_courses_software_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.Button"
                android:background="?attr/selectableItemBackground"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_type_software"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/fragment_courses_software_see_all"
                android:layout_alignBaseline="@+id/fragment_courses_software_see_all" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_courses_software_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_courses_software_see_all" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_courses_cyber_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <Button
                android:id="@+id/fragment_courses_cyber_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.Button"
                android:background="?attr/selectableItemBackground"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_type_cyber"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/fragment_courses_cyber_see_all"
                android:layout_alignBaseline="@+id/fragment_courses_cyber_see_all" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_courses_cyber_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_courses_cyber_see_all" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_courses_it_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <Button
                android:id="@+id/fragment_courses_it_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.Button"
                android:background="?attr/selectableItemBackground"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_type_it"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/fragment_courses_it_see_all"
                android:layout_alignBaseline="@+id/fragment_courses_it_see_all" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_courses_it_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_courses_it_see_all" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
