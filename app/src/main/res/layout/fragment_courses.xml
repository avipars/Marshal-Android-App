<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_courses_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.basmapp.marshal.ui.fragments.CoursesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:id="@+id/fragment_courses_main_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.basmapp.marshal.ui.widget.AutoScrollViewPager
                android:id="@+id/main_catalog_view_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/highlight_banner_item_height"
                android:layout_gravity="top"
                android:clipChildren="false"
                android:clipToPadding="true"
                android:visibility="gone" />

            <com.basmapp.marshal.ui.widget.InkPageIndicator
                android:id="@+id/page_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:paddingBottom="8dp"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
