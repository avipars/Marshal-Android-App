<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.basmach.marshal.ui.fragments.CoursesFragment">

    <RelativeLayout android:layout_height="200dp"
        android:layout_width="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/main_catalog_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"/>

        <com.basmach.marshal.ui.utils.InkPageIndicator
            android:id="@+id/main_catalog_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

</RelativeLayout>
