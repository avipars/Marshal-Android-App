<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/description_background"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingLeft="16.0dp"
                android:paddingRight="16.0dp"
                android:paddingTop="6.0dp">

                <EditText
                    android:id="@+id/describe_problem_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="@string/describe_problem_description"
                    android:imeOptions="actionDone"
                    android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
                    android:maxLines="4"
                    android:minLines="4"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarDefaultDelayBeforeFade="200"
                    android:scrollbarFadeDuration="300"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="vertical"
                    android:selectAllOnFocus="true" />

                <Button
                    android:id="@+id/describe_problem_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16.0dp"
                    android:layout_marginTop="4.0dp"
                    android:text="@string/next"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9.0dp"
                android:layout_marginLeft="10.0dp"
                android:layout_marginRight="10.0dp"
                android:layout_marginTop="9.0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3.0dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:paddingBottom="10.0dp"
                            android:paddingEnd="12.0dp"
                            android:paddingStart="12.0dp"
                            android:paddingTop="8.0dp"
                            android:text="@string/describe_problem_screenshots"
                            android:textColor="?colorAccent"
                            android:textSize="16.0sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_gravity="bottom"
                            android:background="@color/divider_color" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/screenshots"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8.0dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/screenshot_one"
                            android:layout_width="0dp"
                            android:layout_height="144.0dp"
                            android:layout_margin="2.1999817dp"
                            android:layout_weight="1"
                            android:background="@drawable/inline_screenshot_placeholder"
                            android:clickable="true"
                            android:contentDescription="@null"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:scaleType="center"
                            android:src="@drawable/ic_add_large" />

                        <ImageView
                            android:id="@+id/screenshot_two"
                            android:layout_width="0dp"
                            android:layout_height="144.0dp"
                            android:layout_margin="2.1999817dp"
                            android:layout_weight="1"
                            android:background="@drawable/inline_screenshot_placeholder"
                            android:clickable="true"
                            android:contentDescription="@null"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:scaleType="center"
                            android:src="@drawable/ic_add_large" />

                        <ImageView
                            android:id="@+id/screenshot_three"
                            android:layout_width="0dp"
                            android:layout_height="144.0dp"
                            android:layout_margin="2.1999817dp"
                            android:layout_weight="1"
                            android:background="@drawable/inline_screenshot_placeholder"
                            android:clickable="true"
                            android:contentDescription="@null"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:scaleType="center"
                            android:src="@drawable/ic_add_large" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
