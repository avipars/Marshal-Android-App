<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.basmach.marshal.ui.fragments.ErrorFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/error_earth_background"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="48dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="Sorry, something went wrong while trying to update..."
        android:id="@+id/error_fragment_textView_message" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try again"
        android:layout_below="@+id/error_fragment_textView_message"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:background="@color/black_trans80"
        android:foreground="?android:selectableItemBackground"
        android:id="@+id/error_fragment_button_tryAgain" />
</RelativeLayout>
