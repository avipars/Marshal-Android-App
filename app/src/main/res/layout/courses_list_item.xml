<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:id="@+id/courses_list_item_cardView"
        app:cardBackgroundColor="#FAFAFA"
        app:cardCornerRadius="@dimen/courses_list_item_cardView_cornerRadius"
        app:cardElevation="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:foreground="?attr/selectableItemBackground">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:id="@+id/courses_list_item_imageView"
                    android:src="@drawable/bg_empty_profile_art"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius_bottom_left="0dp"
                    app:riv_corner_radius_bottom_right="0dp"
                    app:riv_corner_radius_top_left="@dimen/courses_list_item_cardView_cornerRadius"
                    app:riv_corner_radius_top_right="@dimen/courses_list_item_cardView_cornerRadius" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/courses_list_item_textView"
                    android:textColor="@android:color/black"
                    android:text="FrontEnd - Angular JS, HTML 5"
                    android:padding="5dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/courses_list_item_moocFlag"
                android:src="@drawable/mooc_flag"
                android:layout_gravity="end"
                android:visibility="gone" />
        </FrameLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
