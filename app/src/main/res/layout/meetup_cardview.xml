<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meetup_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.CardView
        android:id="@+id/meetup_cardView"
        style="@style/AppTheme.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/meetup_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minWidth="280dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/meetup_imageView"
                    android:layout_width="@dimen/link_preview_thumb_width"
                    android:layout_height="@dimen/link_preview_thumb_height"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:transitionName="@string/transition_header_image" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:paddingBottom="2dp"
                    android:paddingEnd="4dp"
                    android:paddingStart="16dp"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/meetup_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:lineSpacingMultiplier="1.08"
                        android:maxLines="1"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/meetup_subTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:paddingBottom="1.0dp"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
