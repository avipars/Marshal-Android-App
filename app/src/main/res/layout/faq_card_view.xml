<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/faq_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/faq_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1.0"
                android:text="איך אני מגיע לבסמ״ח?"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="?android:textColorPrimary"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/faq_expand_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:contentDescription="@null"
                android:duplicateParentState="true"
                android:focusable="false"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_faq_expand" />
        </LinearLayout>

        <TextView
            android:id="@+id/faq_answer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="מכוון ת׳וויז לדרך בן גוריון 100"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?android:textColorPrimary"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/faq_answer_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:duplicateParentState="true"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:srcCompat="@drawable/bg_default_profile_art" />
    </LinearLayout>

</android.support.v7.widget.CardView>