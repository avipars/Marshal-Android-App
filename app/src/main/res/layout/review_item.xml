<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/review_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16.0dp"
    android:paddingTop="12.0dp"
    android:paddingBottom="12.0dp">

    <ImageView
        android:id="@+id/user_profile_image"
        android:layout_width="40.0dp"
        android:layout_height="40.0dp"
        android:layout_marginTop="10.0dp"
        android:focusable="true"
        android:background="@drawable/circle_border_small"
        android:src="@drawable/ic_profile_none" />

    <RelativeLayout
        android:id="@+id/review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/user_profile_image"
        android:paddingStart="16.0dp"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:id="@+id/action_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingStart="16.0dp"
            android:paddingEnd="16.0dp"
            android:paddingTop="8.0dp"
            android:paddingBottom="8.0dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/action_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_edit_course"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/action_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="6.0dp"
                android:textAllCaps="true"
                android:textSize="14.0sp"
                android:textColor="?colorAccent"
                android:text="@string/edit_review" />
        </LinearLayout>

        <View
            android:id="@+id/leading_spacer"
            android:layout_width="match_parent"
            android:layout_height="8.0dp" />

        <LinearLayout
            android:id="@+id/author_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leading_spacer"
            android:layout_toStartOf="@+id/action_container"
            android:paddingEnd="8.0dp"
            android:layout_alignWithParentIfMissing="true">

            <TextView
                android:id="@+id/review_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8.0dp"
                android:textSize="14.0sp"
                android:focusable="true"
                android:textColor="?android:textColorPrimary" />

            <TextView
                android:id="@+id/your_review_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4.0dp"
                android:paddingRight="4.0dp"
                android:gravity="center"
                android:background="@drawable/your_review_background"
                android:textSize="10.0sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:text="@string/your_review_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/review_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_block"
            android:layout_toStartOf="@+id/action_container"
            android:paddingEnd="8.0dp"
            android:focusable="true">

            <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:id="@+id/review_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6.0dp"
                android:clickable="false"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                android:theme="@style/Course.RatingBar" />

            <TextView
                android:id="@+id/review_date"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.0sp"
                android:lineSpacingExtra="0.0sp"
                android:textColor="?android:textColorSecondary" />

            <TextView
                android:id="@+id/review_edited"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6.0dp"
                android:textSize="12.0sp"
                android:lineSpacingExtra="0.0sp"
                android:textColor="?android:textColorSecondary"
                android:text="@string/review_edited_after_developer_reply" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/metadata_block"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_header"
            android:layout_toStartOf="@+id/action_container"
            android:layout_marginTop="-2.0dp"
            android:layout_marginBottom="2.0dp"
            android:paddingEnd="8.0dp"
            android:focusable="true">

            <TextView
                android:id="@+id/review_metadata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.0sp"
                android:ellipsize="end"
                android:focusable="true"
                android:lineSpacingExtra="0.0sp"
                android:textColor="?android:textColorSecondary" />
        </FrameLayout>

        <View
            android:id="@+id/review_title_body_spacer"
            android:layout_width="match_parent"
            android:layout_height="12.0dp"
            android:layout_below="@+id/metadata_block" />

        <TextView
            android:id="@+id/review_title"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/review_title_body_spacer"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4.0dp"
            android:paddingEnd="32.0dp"
            android:textSize="14.0sp"
            android:focusable="true"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary" />

        <TextView
            style="@style/MarshalDetailDescription"
            android:id="@+id/review_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_title"
            android:layout_alignParentStart="true"
            android:paddingEnd="16.0dp"
            android:focusable="true" />
    </RelativeLayout>
    <!--<ViewStub android:id="@+id/review_reply_stub" android:layout="@layout/reviews_developer_reply" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40.0dp" android:layout_below="@+id/review_content"/>-->
</RelativeLayout>
