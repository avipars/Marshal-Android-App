<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="4dp"
    app:cardElevation="6dp"
    tools:context="com.basmapp.marshal.ui.fragments.CoursesFragment$ArrayListFragment">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/li_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/gradient_overlay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/highlights_card_gradient_overlay_height_16_9"
        android:layout_gravity="bottom"
        android:background="@drawable/highlights_bottom_overlay" />

    <LinearLayout
        android:id="@+id/highlight_overlay_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:focusable="false"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="12.0dip"
        android:paddingLeft="24.0dip"
        android:paddingRight="24.0dip">

        <TextView
            android:id="@+id/li_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:maxLines="1"
            android:shadowColor="#61000000"
            android:shadowDy="1.0"
            android:shadowRadius="5.0"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/li_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:shadowColor="#61000000"
            android:shadowDy="1.0"
            android:shadowRadius="3.0"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_play_highlights_banner_card_index"
        android:gravity="center"
        android:minWidth="36dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:textColor="#d7ffffff"
        android:textSize="12sp"
        android:visibility="gone" />
</android.support.v7.widget.CardView>