<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RatingBar
            android:id="@+id/rating_list_item_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:clickable="false"
            android:rating="0"
            style="?android:attr/ratingBarStyleSmall"
            android:theme="@style/Course.RatingBar"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/rating_list_item_textView_lastModifiedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20/12/2016"
            android:textSize="12sp"
            android:gravity="end"
            android:textColor="?android:textColorSecondary"
            android:includeFontPadding="false" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:id="@+id/rating_list_item_textView_comment"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

</LinearLayout>