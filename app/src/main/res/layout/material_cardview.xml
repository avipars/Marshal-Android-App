<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/link_preview_frame"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/link_preview_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        style="@style/AppTheme.CardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/link_preview_content"
                android:background="@drawable/link_preview_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="280dp">

                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="@dimen/link_preview_thumb_width"
                    android:layout_height="@dimen/link_preview_thumb_height"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <TextView
                        android:textColor="?android:textColorPrimary"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:id="@id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:lineSpacingMultiplier="1.08" />

                    <TextView
                        android:textColor="@color/url_color"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:id="@+id/url"
                        android:paddingBottom="1.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:includeFontPadding="false" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:padding="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_below="@+id/link_preview_content"
                android:textAppearance="@android:style/TextAppearance.Small" />
        </RelativeLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/link_preview_progressBar"/>

    </android.support.v7.widget.CardView>
</FrameLayout>